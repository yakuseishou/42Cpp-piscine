NAME = Wasteland

CC = clang++

FLAGS = -std=c++98 -Wall -Werror -Wextra

FILES = main \
		AWeapon \
		PlasmaRifle \
		PowerFist \
		Enemy \
		SuperMutant \
		RadScorpion \
		Character

SRCS = $(addsuffix .cpp, $(FILES))
OBJS = $(addsuffix .o, $(FILES))

all: $(NAME)

$(NAME):
	$(CC) $(FLAGS) -c $(SRCS) 
	$(CC) $(OBJS) -o $(NAME)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all